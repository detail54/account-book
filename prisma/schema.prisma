generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:account.db"
}

model StoreCategory {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  stores  Store[]
  account Account[]
}

model Store {
  id          Int           @id @default(autoincrement())
  category    StoreCategory @relation(fields: [category_id], references: [id])
  category_id Int
  name        String        @unique
  account     Account[]
}

model Account {
  id          Int           @id @default(autoincrement())
  create_dt   DateTime      @default(now())
  updated_dt  DateTime      @updatedAt
  payment_dt  DateTime
  category    StoreCategory @relation(fields: [category_id], references: [id])
  category_id Int
  store       Store         @relation(fields: [store_id], references: [id])
  store_id    Int
  amount      Int
  memo        String?
}
